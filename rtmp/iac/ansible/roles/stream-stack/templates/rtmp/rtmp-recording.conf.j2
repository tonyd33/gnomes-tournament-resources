worker_processes auto;
rtmp_auto_push on;
events {}
user root root;
rtmp {
    server {
        listen {{ rtmp_port }};
        chunk_size {{ rtmp_chunk_size }};

        application live {
            live on;

            # recordings
            record all;
            record_path /var/rtmp/recordings;
            record_unique on;
        }
    }
}


